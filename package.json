{
  "name": "launchpad-ddangha",
  "version": "0.1.0",
  "private": true,
  "description": "Spec-driven monorepo for rapid service building",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "yarn workspace @ddangha/backend dev",
    "dev:frontend": "yarn workspace @ddangha/frontend dev",
    "build": "yarn workspaces run build",
    "lint": "yarn workspaces run lint",
    "type-check": "yarn workspaces run type-check",
    "test": "yarn test:backend",
    "test:backend": "yarn workspace @ddangha/backend test",
    "test:backend:unit": "yarn workspace @ddangha/backend test:unit",
    "test:backend:integration": "yarn workspace @ddangha/backend test:integration",
    "test:infra:up": "docker compose up postgres-test -d",
    "test:infra:down": "docker compose stop postgres-test",
    "test:db:reset": "node scripts/truncate-test-dbs.mjs",
    "test:e2e": "yarn workspace @ddangha/frontend test:e2e",
    "test:e2e:ui": "yarn workspace @ddangha/frontend test:e2e:ui",
    "test:e2e:report": "yarn workspace @ddangha/frontend test:e2e:report",
    "test:frontend:unit:ui": "yarn workspace @ddangha/frontend test:unit:ui"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
